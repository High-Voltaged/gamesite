{
   "compilerOptions": {
     "module": "commonjs",
     "target": "es6",
     "moduleResolution": "node",
     "lib": [ "es6", "dom" ],
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "allowSyntheticDefaultImports": true,
     "noEmit": true,
     "baseUrl": ".",
     "resolveJsonModule": true,
     "paths": {
       "~/*": [ "./*" ],
       //"*": [ "node_modules/*" ],
       //"~/*": [ "src/*" ],
       "@/*": [ "./src/components/*" ],
       "#/*": [ "./src/*" ]
     },
     "types": [
       "@nuxt/types"
     ]
   },
   "include": [ "./src/**/*.ts", "./src/**/*.vue", "*.ts", "*.vue" ],
   "exclude": [ "node_modules" ]
 }
 